% --------- Обратное, одномерное ДИСКРЕТНОЕ ПРЕОБРАЗОВАНИЕ ФУРЬЕ ----------

% нет привязки к времени, фаза искажена т.о. теорема о сдвиге к вычисленному результату exp(-1i*2*pi*n*k/N)
% n - номер отсчета сигнала
% k - номер спектрального отсчета
% N - размерность образа
function x = idft(X)
N = length(X);
x = zeros(size(X));
for k = 1 : N         %  номер гармоники, половина частоты дискретизации
    for n = 1 : N       % номер отсчета
        x(k) = x(k) + X(n)*exp(2*pi*1i*k*n/N);
    end
end
end
